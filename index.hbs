{{!< default}}
<div class="gh-page">
    <div class="gh-container">
            <div class="gh-featured">
                {{#get "posts" filter="featured:true"}}
                    {{#foreach posts}}
                        {{> "card" page=../pagination.page}}
                    {{/foreach}}
                {{/get}}
            </div>
        <div class="gh-postfeed">
            <div class="gh-postfeed-posts">
                {{#get "posts" filter="featured:false"}}
                    {{#foreach posts}}
                        {{> "card" page=../pagination.page}}
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="gh-postfeed-activityhub">
                <h3>Activity Hub</h3>
                <p>
                    The Activity Hub is a collection of all the posts and pages on this site.
                </p>
            </div>
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
